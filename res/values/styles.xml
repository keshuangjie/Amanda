<resources>
    
    <style name="detail_head_title">
        <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">center</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/head_text</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
    </style>
    
    <style name="set_password">
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/dark_slate_gray</item>
    </style>
    
    <style name="set_password_button">
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="post_blog_text_notice">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dip</item>
    </style>
    
    <style name="post_blog_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
<!--         <item name="android:textStyle">italic</item> -->
        <item name="android:typeface">normal</item>
        <item name="android:background">@null</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>
    
    <style name="mood_name">
       <item name="android:textColor">@color/dark_slate_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <style name="mood_content">
       <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <style name="mood_date">
       <item name="android:textColor">@color/gray_1</item>
        <item name="android:textSize">12sp</item>
<!--         <item name="android:textStyle">italic</item> -->
<!--         <item name="android:typeface">monospace</item> -->
    </style>
    
    <style name="blog_share_text" parent="@style/mood_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dip</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
